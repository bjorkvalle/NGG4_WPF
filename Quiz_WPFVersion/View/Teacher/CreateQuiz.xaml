<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Quiz_WPFVersion.View._Shared"
      xmlns:local1="clr-namespace:Quiz_WPFVersion.Models"
      xmlns:loc="clr-namespace:Quiz_WPFVersion.HelperClass"
      xmlns:Teacher="clr-namespace:Quiz_WPFVersion.ViewModels.Teacher"
      x:Class="Quiz_WPFVersion.View.Teacher.CreateQuiz"
      mc:Ignorable="d" 
      Title="CreateQuiz" d:DesignWidth="681.478" d:DesignHeight="847.024">
    <Page.Resources>
        <ControlTemplate x:Key="ListViewControlTemplate1" TargetType="{x:Type ListView}">
            <Grid Background="White" Height="54" VerticalAlignment="Top" DataContext="{Binding questionList}">
                <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="22.222" TextWrapping="Wrap" VerticalAlignment="Top" Width="79.146" Text="{Binding Title}"/>
                <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="25.4" Margin="61.2,0,0,0" TextWrapping="Wrap" Text="{Binding Type}" VerticalAlignment="Top" Width="131.4"/>
                <CheckBox x:Name="checkBox" Content="CheckBox" HorizontalAlignment="Stretch" Margin="197.6,1,187.98,0" Style="{DynamicResource SimpleCheckBox}" VerticalAlignment="Top" d:LayoutOverrides="Width"/>
            </Grid>
        </ControlTemplate>
        <loc:QuestionTemplateSelector x:Key="Q_uestionTemplateSelector"/>
    </Page.Resources>

    <Page.DataContext>
        <Teacher:CreateQuizViewModel/>
    </Page.DataContext>

    <Grid Background="{StaticResource backgroundOrangeLight}">
        <Grid Width="450" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0">

            <StackPanel Orientation="Vertical">


                <TextBlock x:Name="blockHeader_Copy" TextWrapping="Wrap" Text="SKAPA ETT PROV"  FontFamily="Segoe UI Semibold" FontSize="20"/>
                <TextBlock x:Name="blockHeader_Copy1" TextWrapping="Wrap" Text="Newtons testverktyg" FontFamily="Segoe UI Light" FontSize="13.333"  Foreground="{DynamicResource fontColor}"/>
                <Grid x:Name="gridRubrik" Height="38.92" Margin="0,25,0,0">
                    <TextBlock x:Name="blockHeader" TextWrapping="Wrap" Text="Rubrik" FontWeight="Bold" VerticalAlignment="Top" FontFamily="Segoe UI Semibold" Foreground="{DynamicResource fontColor}"/>
                    <TextBox x:Name="txtbHeader" TextWrapping="Wrap" BorderBrush="{x:Null}" Margin="0,15.96,0,5">
                        <TextBox.Background>
                            <SolidColorBrush Color="#FFFFEBC7"/>
                        </TextBox.Background>
                    </TextBox>


                </Grid>
                <Grid x:Name="gridBeskrivning" Height="38.92" Margin="0,5,0,0" MinHeight="99">
                    <TextBlock x:Name="blockHeader1" TextWrapping="Wrap" Text="Beskrivning" VerticalAlignment="Top" FontFamily="Segoe WP Semibold" Foreground="{DynamicResource fontColor}"/>
                    <TextBox x:Name="txtbDescription" TextWrapping="Wrap" BorderBrush="{x:Null}"  Margin="0,15.96,0,5">
                        <TextBox.Background>
                            <SolidColorBrush Color="{DynamicResource TextBox_Background_LightYellow}"/>
                        </TextBox.Background>
                    </TextBox>


                </Grid>
                <Grid x:Name="gridAddQuestionType" Height="66.17">
                    <StackPanel x:Name="menuAddQuestionType" d:LayoutOverrides="Width" Margin="0,4,0,0">
                        <TextBlock x:Name="lblAddQuestion" TextWrapping="Wrap" Text="Lägg till en fråga" FontFamily="Segoe WP Semibold" Foreground="{DynamicResource fontColor}" VerticalAlignment="Top" d:LayoutOverrides="TopPosition, BottomPosition"/>
                        <StackPanel x:Name="stackpanelAddCommand" Orientation="Horizontal"  Margin="0,9,0,0">

                            <Button x:Name="btnSingelQuestion" Style="{StaticResource MyButtonStyle}"  Margin="0,0,0,0" Click="btn_AddSingleQuestion">
                                <Button.Template>
                                    <ControlTemplate>
                                        <StackPanel>
                                            <TextBlock  FontFamily="Segoe MDL2 Assets" Text="&#xE73A;" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="{x:Null}" Foreground="{DynamicResource fontColor}"/>
                                            <TextBlock Margin="0,0" Foreground="{DynamicResource fontColor}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Alternativ"/>
                                        </StackPanel>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button x:Name="btnMultiQuestion" Style="{StaticResource MyButtonStyle}"  Margin="16,0,0,0" Click="btnMultiQuestion_Click">
                                <Button.Template>
                                    <ControlTemplate>
                                        <StackPanel>
                                            <TextBlock  FontFamily="Segoe MDL2 Assets" Text="&#xE133;" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="{x:Null}" Foreground="{DynamicResource fontColor}" Margin="0,-2,0,0"/>
                                            <TextBlock Margin="0,-2,0,0" Foreground="{DynamicResource fontColor}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Flerval"/>
                                        </StackPanel>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <!--&#xE133;-->

                            <Button x:Name="btnRankQuestion" Style="{StaticResource MyButtonStyle}"  Margin="24,0,0,0" Click="btnRankQuestion_Click">
                                <Button.Template>
                                    <ControlTemplate>
                                        <StackPanel>
                                            <TextBlock  FontFamily="Segoe MDL2 Assets" Text="&#xE71D;" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"  Background="{x:Null}" Foreground="{DynamicResource fontColor}"/>
                                            <TextBlock Margin="0,0" Foreground="{DynamicResource fontColor}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Rank"/>
                                        </StackPanel>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <ComboBox x:Name="comboBox" Width="120" Visibility="Collapsed"/>


                        </StackPanel>
                    </StackPanel>
                </Grid>
                <StackPanel x:Name="gridQuestion" Margin="0,15,0,0" Visibility="Collapsed">

                    <TextBlock x:Name="lblQuestionHeader" TextWrapping="Wrap" FontFamily="Segoe WP Semibold" Foreground="{DynamicResource fontColor}" ><Run Text="Fråga"/><Run Text=" ( TEMPLATE)"/></TextBlock>

                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="txtbQuestion" TextWrapping="Wrap" Opacity="0.5" MinWidth="387"/>

                        <Border Width="50" Height="50" HorizontalAlignment="Left" Margin="13,0,0,0" BorderBrush="#FFB9B9B9" BorderThickness="1">

                            <Image x:Name="image" Source="/Quiz_WPFVersion;component/Data/Images/1.png"/>

                        </Border>
                    </StackPanel>

                    <StackPanel x:Name="stkAltHeader" Orientation="Horizontal" Margin="0,14,0,0">
                        <TextBlock x:Name="lblAlternative" TextWrapping="Wrap" FontFamily="Segoe WP Semibold" Foreground="{DynamicResource fontColor}"><Run Text="Alternativ"/></TextBlock>
                        <TextBlock x:Name="lblAlternative_Copy" TextWrapping="Wrap" FontFamily="Segoe UI Light" Foreground="{DynamicResource fontColor}" Text="Rätt" Margin="345,0,0,0"/>
                    </StackPanel>
                    <!--<StackPanel x:Name="AlternativeContainer1">
                        <StackPanel x:Name="Alternative" HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBox x:Name="txtbAlternative1" TextWrapping="Wrap" Height="17.96" MinWidth="134" Width="391" Opacity="0.5"/>
                            <RadioButton x:Name="rbtAlt" Margin="10,2,0,0" GroupName="Correct"/>
                            <Button x:Name="btnRemoveAlternative" Content="&#xE74D;" Background="{x:Null}" Width="25" Margin="9,0,0,0" FontFamily="Segoe MDL2 Assets" BorderBrush="{x:Null}" Style="{DynamicResource MyButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel x:Name="AlternativeContainer2" Margin="0,6,0,0">
                        <StackPanel x:Name="Alternative1" HorizontalAlignment="Left" Orientation="Horizontal">
                            <TextBox x:Name="txtbAlternative2" TextWrapping="Wrap" Height="17.96" MinWidth="175" Width="391" Opacity="0.5"/>
                            <RadioButton x:Name="rbtAlt1" Margin="10,2,0,0" GroupName="Correct"/>
                            <Button x:Name="btnRemoveAlternative_Copy" Content="&#xE74D;" Background="{x:Null}" Width="25" Margin="9,0,0,0" FontFamily="Segoe MDL2 Assets" BorderBrush="{x:Null}" Style="{DynamicResource MyButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>-->

                    <Button x:Name="btnAddAlternative" Content="&#xE710;" Background="{x:Null}" Width="25" Click="btnAddAlternative_Click" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Left" Margin="0,10,0,0" BorderBrush="{x:Null}" Style="{DynamicResource MyButtonStyle}" FontWeight="Bold"/>






                </StackPanel>
                <StackPanel x:Name="gridQuestion_V_2" Margin="0,15,0,0" Visibility="Visible">
                    <TextBlock x:Name="lblQuestionHeader1" TextWrapping="Wrap" FontFamily="Segoe WP Semibold" Foreground="{DynamicResource fontColor}" Visibility="Collapsed" ><Run Text="Fråga"/><Run Text=" ( TEMPLATE)"/></TextBlock>

                    <ListBox x:Name="listQuestion2" Height="304" Background="{x:Null}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="0,1" ItemTemplateSelector="{Binding Mode=OneWay, Source={StaticResource Q_uestionTemplateSelector}}" ItemsSource="{Binding questionList}" >
                        <!--ItemsSource="{Binding questionList}"   ItemContainerStyle="{DynamicResource ListBox_Transparent}" -->

                        <ListBox.BorderBrush>
                            <LinearGradientBrush EndPoint="0,1" MappingMode="RelativeToBoundingBox" StartPoint="1,1">
                                <GradientStop Color="#FF959595"/>
                                <GradientStop Color="#FFFFD68F" Offset="1"/>
                            </LinearGradientBrush>
                        </ListBox.BorderBrush>
                    </ListBox>






                    <StackPanel Orientation="Horizontal" d:IsHidden="True">
                        <TextBox x:Name="txtbQuestion1" TextWrapping="Wrap" Opacity="0.5" MinWidth="387" Visibility="Collapsed"/>
                        <Border Width="50" Height="50" HorizontalAlignment="Left" Margin="13,0,0,0" BorderBrush="#FFB9B9B9" BorderThickness="1" Visibility="Collapsed">
                            <Image x:Name="image1" Source="/Quiz_WPFVersion;component/Data/Images/1.png" Visibility="Collapsed"/>
                        </Border>
                    </StackPanel>
                    <StackPanel x:Name="stkAltHeader1" Orientation="Horizontal" Margin="0,14,0,0" d:IsHidden="True">
                        <TextBlock x:Name="lblAlternative1" TextWrapping="Wrap" FontFamily="Segoe WP Semibold" Foreground="{DynamicResource fontColor}" Visibility="Collapsed"><Run Text="Alternativ"/></TextBlock>
                        <TextBlock x:Name="lblAlternative_Copy1" TextWrapping="Wrap" FontFamily="Segoe UI Light" Foreground="{DynamicResource fontColor}" Text="Rätt" Margin="345,0,0,0" Visibility="Collapsed"/>
                    </StackPanel>
                    <StackPanel x:Name="AlternativeContainer3" d:IsHidden="True">
                        <StackPanel x:Name="Alternative2" HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBox x:Name="txtbAlternative3" TextWrapping="Wrap" Height="17.96" MinWidth="134" Width="391" Opacity="0.5" Visibility="Collapsed"/>
                            <RadioButton x:Name="rbtAlt2" Margin="10,2,0,0" GroupName="Correct" Visibility="Collapsed"/>
                            <Button x:Name="btnRemoveAlternative1" Content="&#xE74D;" Background="{x:Null}" Width="25" Margin="9,0,0,0" FontFamily="Segoe MDL2 Assets" BorderBrush="{x:Null}" Style="{DynamicResource MyButtonStyle}" Visibility="Collapsed"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel x:Name="AlternativeContainer4" Margin="0,6,0,0" d:IsHidden="True">
                        <StackPanel x:Name="Alternative3" HorizontalAlignment="Left" Orientation="Horizontal">
                            <TextBox x:Name="txtbAlternative4" TextWrapping="Wrap" Height="17.96" MinWidth="175" Width="391" Opacity="0.5" Visibility="Collapsed"/>
                            <RadioButton x:Name="rbtAlt3" Margin="10,2,0,0" GroupName="Correct" Visibility="Collapsed"/>
                            <Button x:Name="btnRemoveAlternative_Copy1" Content="&#xE74D;" Background="{x:Null}" Width="25" Margin="9,0,0,0" FontFamily="Segoe MDL2 Assets" BorderBrush="{x:Null}" Style="{DynamicResource MyButtonStyle}" Visibility="Collapsed"/>
                        </StackPanel>
                    </StackPanel>

                    <Button x:Name="btnAddAlternative1" Content="&#xE710;" Background="{x:Null}" Width="25" Click="btn_Add_alt_NEW" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Left" Margin="0,10,0,0" BorderBrush="{x:Null}" Style="{DynamicResource MyButtonStyle}" FontWeight="Bold" Visibility="Collapsed" d:IsHidden="True"/>






                </StackPanel>

                <ListView x:Name="listQuestion" ItemsSource="{Binding alternativeList}"  Margin="0,20,0.4,0" Height="105" IsSynchronizedWithCurrentItem="True" Visibility="Collapsed"  >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="160" Header="Alternativ">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Title}"  Cursor="Hand" />

                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="160" Header="Rätt svar">
                                <GridViewColumn.CellTemplate>

                                    <DataTemplate>

                                        <RadioButton  Cursor="Hand" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>


                            </GridViewColumn>
                        </GridView>

                    </ListView.View>

                </ListView>



                <Button x:Name="button" Content="Button" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Width="75" Click="button_Click" Visibility="Collapsed"/>
            </StackPanel>


        </Grid>


    </Grid>
</Page>
