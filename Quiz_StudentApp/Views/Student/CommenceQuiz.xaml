<Page x:Class="Quiz_StudentApp.Views.Student.CommenceQuiz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Quiz_StudentApp.Views.Student"
      xmlns:ViewModels="clr-namespace:Quiz_StudentApp.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Loaded="Page_Loaded"
      Title="CommenceQuiz">
    <Page.DataContext>
        <ViewModels:QuizViewModel />
    </Page.DataContext>
    <Grid Background="Orange">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="QuizTitle" Grid.Column="0" Grid.Row="0" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="12" Text="Test: "/>
                <TextBlock x:Name="txtblockQuizTitle" Margin="8,0,0,0" FontSize="12" />
            </StackPanel>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ListBox Grid.Column="0" Grid.Row="1" ItemsSource="{Binding Questions}" Width="300" x:Name="listBoxQuestions">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Width="200" VerticalAlignment="Center" x:Name="txtblockQuestionTitle" Text="{Binding Title}" Height="25" />
                            <ListBox ItemsSource="{Binding Alternatives}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock x:Name="txtblockAnswer" Text="{Binding Title}" />
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            </ListBox>
            
        </ScrollViewer>
    </Grid>
</Page>
